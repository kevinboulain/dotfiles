# man 5 sway-input

input "type:keyboard" {
  repeat_rate 40
  repeat_delay 175

  # man 7 xkeyboard-config
  xkb_layout us
  xkb_variant intl
  xkb_options caps:ctrl_modifier
}

input "type:touchpad" {
  accel_profile adaptive
  # Firefox behaves differently under Wayland, see firefox/user.js
  scroll_factor 2
}
