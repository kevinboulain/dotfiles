# man 5 sway-input

seat * hide_cursor 5000

# TODO: https://major.io/2022/05/24/sway-reload-causes-a-firefox-crash/
input "type:keyboard" {
  repeat_rate 40
  repeat_delay 175

  # man 7 xkeyboard-config
  xkb_layout us,bqn
  xkb_variant intl,
  xkb_options ctrl:nocaps,grp:rshift_toggle
  # Or for xkb_file:
  #  setxkbmap -layout us,bqn -variant intl, -option caps:ctrl_modifier,grp:rshift_toggle -print
  # See https://a3nm.net/blog/xkbcomp.html.
}

input "type:touchpad" {
  accel_profile adaptive
  # Firefox behaves differently under Wayland, see firefox/user.js
  scroll_factor 2
}
